<div class="form_wrapper">

  <h1>New Post</h1>

  <%= form_for(@picpost) do |f|%>

    <div class="field mt-4">
      <%= f.label :place, "場所" %><br />
      <%= f.text_field :place, autofocus: true %>
    </div>

    <div class="field mt-4">
      <%= f.label :picture, "写真" %><br />
      <%= f.file_field :picture %>
    </div>


    <div class="field mt-4">
      <%= f.label :text, "コメント" %><br />
      <%= f.text_area :text, autofocus: true %>
    </div>

    

    <div class="actions">
      <%= f.submit "写真を投稿", class:"btn btn-outline-secondary my-5" %>
    </div>

  <% end %>

</>
