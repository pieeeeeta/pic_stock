<div class="like-link" id="like-link-<%= picpost.id %>">

  <% if user_signed_in? && current_user.likes.find_by(picpost_id: picpost.id) %>

    <%= link_to unlike_path(picpost.id), method: :delete, remote: true do %>
        <div class = "iine__button">❤️<%= picpost.likes.count %></div>
    <% end %>

  <% else %>

    <%= link_to like_path(picpost.id), method: :post, remote: true do %>
      <div class = "iine__button">♡️<%= picpost.likes.count %></div>
    <% end %>


  <% end %>


</div>
